{
  "name": "screw-master",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A game built with PlayCo's Astro, ODIE, and PixiJS",
  "author": "Alex Kucherenko",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite --open",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests e2e",
    "lint:fix": "eslint src tests e2e --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"e2e/**/*.ts\" \"*.{json,js,ts}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"e2e/**/*.ts\" \"*.{json,js,ts}\"",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
    "@pixi/sound": "^6.0.0",
    "@pixi/ui": "^2.0.0",
    "@play-co/astro": "11.2.0",
    "@play-co/commons": "^2.0.0",
    "@play-co/odie": "13.3.1763646038",
    "dat.gui": "^0.7.9",
    "gsap": "^3.12.0",
    "pixi.js": "npm:@play-co/pixi.js@8.14.2",
    "typed-signals": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^25.0.0",
    "prettier": "^3.4.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.2.0",
    "vitest": "^2.0.0"
  }
}
